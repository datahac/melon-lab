{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["esnext"],
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "allowJs": true,
    "declaration": false,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
}
